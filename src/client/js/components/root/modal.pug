#login-modal.ui.modal
  i.close.icon
  .header User Login
  .content
    #login-form.ui.form
      .field
        label Email
        input(name="email" placeholder="your email" type="email")
      .field
        label Password
        input(name="password" placeholder="password" type="password")
      .ui.error.message
  .actions
    .ui.positive.right.labeled.icon.button
      | Login
      i.send.icon
